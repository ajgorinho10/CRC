<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.gui.Status" fx:id="root">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Ilość poprawnie przesłanych wiadomości:"/>
    <Label fx:id="successLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>

    <Label text="Ilość błędnie przesłanych wiadomości:"/>
    <Label fx:id="errorLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>

    <Label text="Średni czas przesyłania:"/>
    <Label fx:id="avgTimeLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
</VBox>
